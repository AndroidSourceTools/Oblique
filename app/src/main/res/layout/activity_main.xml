<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="-70dp">

        <ak.sh.ay.oblique.ObliqueView
            android:id="@+id/obliqueView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:scaleType="centerCrop"
            app:angle="LEFT_BOTTOM_TO_RIGHT_TOP"
            app:basecolor="#2E3192"
            app:endcolor="#FBB03B"
            app:ending_slant_angle="0"
            app:radius="18"
            app:shadow="10"
            app:startcolor="#D4145A"
            app:starting_slant_angle="10"
            app:type="linear_gradient" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_oblique"
                fontPath="fonts/Roboto-Thin.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Oblique"
                android:textColor="#ffffff"
                android:textSize="75sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-30dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/demonstrator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_weight="1">

            <ak.sh.ay.oblique.ObliqueView
                android:id="@+id/ov_demo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pretty_1"
                app:ending_slant_angle="10"
                app:radius="18"
                app:shadow="10"
                app:starting_slant_angle="10"
                app:type="image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:elevation="10dp"
                android:gravity="center"
                android:rotation="-10"
                android:text="Demo"
                android:textColor="#fff"
                android:textSize="26sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/sample"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_weight="1">

            <ak.sh.ay.oblique.ObliqueView
                android:id="@+id/ov_sample1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/pretty_2"
                app:ending_slant_angle="10"
                app:radius="18"
                app:shadow="10"
                app:starting_slant_angle="10"
                app:type="image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:elevation="10dp"
                android:gravity="center"
                android:rotation="-10"
                android:text="Sample 1"
                android:textColor="#fff"
                android:textSize="26sp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-30dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/sample2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_weight="1">

            <ak.sh.ay.oblique.ObliqueView
                android:id="@+id/ov_sample2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pretty_3"
                app:ending_slant_angle="10"
                app:radius="18"
                app:shadow="10"
                app:starting_slant_angle="10"
                app:type="image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:elevation="10dp"
                android:gravity="center"
                android:rotation="-10"
                android:text="Sample 2"
                android:textColor="#fff"
                android:textSize="26sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/sample3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_weight="1">

            <ak.sh.ay.oblique.ObliqueView
                android:id="@+id/ov_sample3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pretty_4"
                app:ending_slant_angle="10"
                app:radius="18"
                app:shadow="10"
                app:starting_slant_angle="10"
                app:type="image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:elevation="10dp"
                android:gravity="center"
                android:rotation="-10"
                android:text="Sample 3"
                android:textColor="#fff"
                android:textSize="26sp" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="-70dp">

        <ak.sh.ay.oblique.ObliqueView
            android:id="@+id/obliqueView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:scaleType="centerCrop"
            app:angle="LEFT_BOTTOM_TO_RIGHT_TOP"
            app:basecolor="#2E3192"
            app:endcolor="#ED1E79"
            app:ending_slant_angle="10"
            app:radius="18"
            app:shadow="10"
            app:startcolor="#662D8C"
            app:starting_slant_angle="0"
            app:type="linear_gradient" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                fontPath="fonts/Roboto-Thin.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:gravity="right"
                android:text="A slanted edged\nImageview Library"
                android:textColor="#fff"
                android:textSize="26sp" />

        </LinearLayout>
    </FrameLayout>


</LinearLayout>

